<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center_horizontal"
    android:weightSum="1">

<TextView android:id="@+id/textView"
    android:layout_width="fill_parent"
    android:text="NameServer ( host[:port] )"
    android:textSize="24sp"
    android:layout_gravity="center_horizontal"
    android:layout_height="wrap_content"
    />

<EditText android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:id="@+id/editText"
    android:text="host[:port]"
    android:textSize="24sp"
    android:layout_gravity="center_horizontal"
    />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <Button
        android:id="@+id/startButton"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="START RTC"
        android:textSize="24sp" />

    <Button
        android:id="@+id/stopButton"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="STOP RTC"
        android:textSize="24sp" />

</LinearLayout>

<TextView
    android:id="@+id/inDataTitleView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5sp"
    android:gravity="center"
    android:text="----- Input Data -----"
    android:textSize="24sp" />

<TextView
    android:id="@+id/inDataView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5sp"
    android:layout_weight="0.11"
    android:background="@android:color/white"
    android:gravity="center"
    android:scrollHorizontally="true"
    android:scrollbars="horizontal"
    android:text=" "
    android:textColor="@android:color/black"
    android:textSize="18sp" />

<TextView
    android:id="@+id/outDataTitleView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5sp"
    android:gravity="center"
    android:text="----- Output Data -----"
    android:textSize="24sp" />

<TextView
    android:id="@+id/outDataView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5sp"
    android:layout_weight="0.11"
    android:background="@android:color/white"
    android:gravity="center"
    android:scrollHorizontally="true"
    android:scrollbars="horizontal"
    android:text=" "
    android:textColor="@android:color/black"
    android:textSize="18sp" />

<TextView
    android:id="@+id/langageTitleView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5sp"
    android:gravity="center"
    android:text="Speech: Language"
    android:textSize="24sp" />

<Spinner
    android:id="@+id/LanguageSpinner"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />

<TextView
    android:id="@+id/recognitionTitleView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Recogniton"
    android:gravity="center"
    android:textSize="24sp" />

<Button
    android:id="@+id/startRecognition"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="0.38"
    android:text="START RECOGNITION"
    android:textSize="24sp" />

</LinearLayout>

